				<field name="pdate" select="1"/>
				</tree>
		</field>
	</record>
	<record model="ir.actions.act_window" id="action_sales agent commission_tree_all">
		<field name="name">commission.all.form.tree</field>
		<field name="res_model">report.commission.month</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree</field>
	</record>
	<menuitem name="All Months" id="menu_sale_commisions_reporting_all" parent="menu_sale_commisions_reporting"/>
	<menuitem name="All Commissions" id="menu_sale_commisions_reporting_all_commision" parent="menu_sale_commisions_reporting_all" action="action_sales agent commission_tree_all"/>
	
	<record model="ir.actions.act_window" id="action_sales agent commission_tree_all_open">
		<field name="name">commission.all.form.tree</field>
		<field name="res_model">report.commission.month</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree</field>
		<field name="domain">[('state','=','open')]</field>
	</record>
	<menuitem name="Commissions with Opened Invoices" id="menu_sale_commisions_reporting_all_open" parent="menu_sale_commisions_reporting_all" action="action_sales agent commission_tree_all_open"/>
	
	<record model="ir.actions.act_window" id="action_sales agent commission_tree_all_paid">
